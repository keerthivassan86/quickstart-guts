{
    "variables": {
        "ssh_username": "",
        "image_name": "",
        "source_image_name": "",
        "networks" : ""
    },
    "builders": [
        {
            "type": "openstack",
            "ssh_username": "{{ user `ssh_username` }}",
            "image_name": "{{ user `image_name` }}",
            "source_image_name": "{{ user `source_image_name` }}",
            "flavor": 2,
            "networks": [
                "{{ user `network_alok` }}"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/customize.sh",
                "scripts/cleanup.sh",
                "scripts/zerodisk.sh"
            ]
        }
    ]
}
